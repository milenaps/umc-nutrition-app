		<property name="frequencia" ref="frequenciaAtividade" />
	</bean>
	<bean id="cardapio" class="main.java.com.nutri.model.Cardapio">
		<property name="paciente" ref="paciente" />
		<property name="nutricionista" ref="nutricionista" />
