<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="main.java.com.nutri.model.Usuario" table="usuario">
		<id name="id" column="id" unsaved-value="0">
			<generator class="increment" />
		</id>
		<property name="nome" column="nome" not-null="true" />
		<property name="email" column="email" not-null="true" />
		<one-to-one name="login" class="main.java.com.nutri.model.Login" />
		<bag name="enderecos" table="endereco">
			<key column="usuario" not-null="true" />
			<one-to-many class="main.java.com.nutri.model.Endereco" />
		</bag>
		<bag name="telefones" table="telefone">
			<key column="usuario" not-null="true" />
			<one-to-many class="main.java.com.nutri.model.Telefone" />
		</bag>
	</class>
</hibernate-mapping>