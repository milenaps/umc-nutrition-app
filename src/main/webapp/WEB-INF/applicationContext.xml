	</bean>
	<bean id="nutrienteBean" class="main.java.com.nutri.bean.NutrienteBean" scope="request">
		<property name="nutriente" ref="nutriente" />
		<property name="nutrienteService" ref="nutrienteService" />
	</bean>
	<bean id="pacienteBean" class="main.java.com.nutri.bean.PacienteBean" scope="session">
		<property name="paciente" ref="paciente" />
		<property name="pacienteService" ref="pacienteService" />
	</bean>
	<bean id="patologiaBean" class="main.java.com.nutri.bean.PatologiaBean" scope="request">
		<property name="patologia" ref="patologia" />
