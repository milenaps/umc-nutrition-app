	<!-- ### Mapeamento de objetos ### -->
	<bean id="administrador" class="main.java.com.nutri.model.Administrador" />
	<bean id="alimento" class="main.java.com.nutri.model.Alimento">
		<property name="medida" ref="medida" />
		<property name="categoria" ref="categoria" />
	</bean>
	<bean id="frequenciaAtividade" class="main.java.com.nutri.model.FrequenciaAtividade" />
